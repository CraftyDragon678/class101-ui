{
  "compilerOptions": {
    "target": "esnext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "declaration": true,
    "declarationDir": "dist",
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true,
    "jsx": "react",
    "baseUrl": ".",
    "typeRoots": ["./node_modules/@types"],
    "outDir": "dist",
    "paths": {}
  },
  "include": ["src/**/*"],
  "exclude": ["docz", "example"]
}
