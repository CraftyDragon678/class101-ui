{
  "compilerOptions": {
    "target": "esnext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "declaration": true,
    "declarationDir": "lib",
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react",
    "baseUrl": "src",
    "outDir": "lib",
    "paths": {
      "@common": ["./Common"],
      "@components": ["./Components"],
      "@grid": ["./Grid"],
      "@typography": ["./Typography"]
    }
  },
  "files": ["src/index.ts"],
  "exclude": ["docz", "example"]
}
